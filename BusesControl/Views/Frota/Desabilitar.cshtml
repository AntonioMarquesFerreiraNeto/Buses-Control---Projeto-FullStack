@using BusesControl.Models.Enums
@model Onibus
<link rel="stylesheet" href="~/css/Visualisar.css">
<link rel="stylesheet" href="~/css/home.css">
@if (TempData["MensagemDeErro"] != null) {
    <div class="alert alert-danger" role="alert" style="margin-bottom: 3px;">
        @TempData["MensagemDeErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert erro" aria-label="Close"> X </button>
    </div>
}
<section class="principais">
    <h3 id="titlePrincipal">
        <hr class="text-hide">
    </h3>
    <form class="clientes" asp-controller="Frota" asp-action="Desabilitar" method="post">
        <input type="hidden" asp-for="Id">
        <div class="row view">
            <div class="col-md-12">
                <div class="row">
                    @if (Model == null) {
                        <div class="fil">
                            <br> <br>
                            <p>Não se preocupe, as informações registradas não serão alteradas! <br> Continue usando a aplicação normalmente.</p>
                            <br> <br>
                        </div>
                    }
                    else {
                        <div class="fil">
                            <label for="" class="titleModal">
                                <i class="fa fa-user"></i>
                                Informações sobre o ônibus
                                <hr style="margin-top: 5px;">
                            </label>
                            <p class="align-center"><b>Status do ônibus: </b>@Model.ReturnStatusOnibus(),</p>
                            <p class="align-center"><b>Cor:</b> @Model.ReturnCorBus(),</p>
                            <p class="align-center"><b>Marca: </b>@Html.DisplayFor(model => model.Marca),</p>
                            <p class="align-center"><b>Nome:</b> @Html.DisplayFor(model => model.NameBus),</p>
                            <p class="align-center"><b>Ano de fabricação:</b> @Html.DisplayFor(model => model.DataFabricacao),</p>
                            <p class="align-center"><b>Placa:</b> @Html.DisplayFor(model => model.Placa),</p>
                            <p class="align-center"><b>Renavam:</b> @Html.DisplayFor(model => model.Renavam),</p>
                            <p class="align-center"><b>Numero de chassi:</b> @Html.DisplayFor(model => model.Chassi),</p>
                            <p class="align-center"><b>Quantidade de assentos:</b> @Html.DisplayFor(model => model.Assentos),</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div id="janelaConfirm" class="modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content modal-largura">
                    <div class="modal-header">
                        <h4 class="modal-title">Confirmação</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>
                            Deseja realmente desabilitar o ônibus?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn filtra_btn" asp-action="Desabilitar" asp-controller="Frota">Sim</button>
                        <button type="button" class="btn btn-secondary filtrar_btn2"
                                data-dismiss="modal">
                            Não
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <section class="container-button">
        <a class="btn filtrar_btn voltar" style="color: white" asp-action="Index">Voltar</a>
        <a class="btn filtrar_btn desa" style="color: white" data-target="#janelaConfirm" data-toggle="modal">Desabilitar</a>
    </section>
</section>
<script src="~/js/jquery.min.js"></script>
